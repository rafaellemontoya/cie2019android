<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/hora_ponencia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/quicksand_semi_bold"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/nombre_conferencia_dia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity=""
                android:padding="0dp"
                android:text="nombre_conferencia"
                android:textColor="@color/titulo_conferencias"
                android:textSize="18dp"
                android:fontFamily="@font/quicksand_bold" />
            <TextView
                android:id="@+id/nombre_ponente_dia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nombre ponente"
                android:layout_marginTop="5dp"
                android:textColor="@color/subtitulo_conferencias"
                android:textSize="16dp"

                android:fontFamily="@font/quicksand_regular"/>
            <TextView
                android:id="@+id/sala_dia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sala María Telkes"
                android:layout_marginTop="5dp"
                android:textColor="@color/subtitulo_conferencias"
                android:textSize="14dp"

                android:fontFamily="@font/quicksand_semi_bold"/>
            <TextView
                android:id="@+id/id_dia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sala María Telkes"
                android:layout_marginTop="5dp"
                android:textColor="@color/subtitulo_conferencias"
                android:textSize="14dp"

                android:layout_marginBottom="5dp"
                android:fontFamily="@font/quicksand_semi_bold"/>
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>